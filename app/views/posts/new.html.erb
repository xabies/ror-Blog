<div id="entradas">
    <h1>Nuevo post</h1>
	<br>
    <% form_for(@post) do |f| %>
    <%= f.error_messages %>
    <p>
        Titulo
        <br/>
        <%= f.text_field :title %>
    </p>
	<br>
    <p>
        <%= f.label :imagen %>
        <br/>
        <%= f.text_field :imagen %>
    </p>
	<br>
    <p>
        Contenido
        <br/>
        <%= f.text_area :body %>
    </p>
	<br>
    <p>
        <%= f.submit 'Crear' %>
    </p>
	<br>
    <% end %>
    <%= link_to 'Volver', posts_path %>
</div>
